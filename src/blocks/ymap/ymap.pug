//- Все примеси в этом файле должны начинаться c имени блока (ymap)

mixin ymap(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +ymap('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' ymap--' + modsList[i].trim();
      }
    }
  .ymap(class=allMods)&attributes(attributes)
    .loader.loader-default
    #map-yandex
