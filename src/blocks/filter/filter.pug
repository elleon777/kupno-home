//- Все примеси в этом файле должны начинаться c имени блока (filter)

mixin filter(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +filter('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' filter--' + modsList[i].trim();
      }
    }

  .filter
    .filter__mobile
      span Фильтры
      button.filter__mobile-btn
        img(src="img/filter.svg", alt="")
    .filter__popup
      .filter__popup-inner
        button.filter__close
          img(src="img/close.svg", alt="")
        .filter__title Фильтры
        form.filter__form(name="filter")
          block

          +link("Применить фильтр", "", "btn,red filter__accept", true)
          +link("Сбросить", "", "btn,transparent filter__reset", true)
